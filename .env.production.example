# Vercel Production Environment Variables
# Copy these to your Vercel dashboard Environment Variables section

# Bunny.net API Configuration (REQUIRED)
VITE_BUNNY_API_KEY=your_bunny_api_key_here

# Supabase Database Configuration (REQUIRED)
SUPABASE_URL=https://your_project_id.supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://your_project_id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# PostgreSQL Database URLs (REQUIRED for Supabase)
POSTGRES_URL=postgres://postgres.your_project_id:your_password@your_host:6543/postgres?sslmode=require
POSTGRES_PRISMA_URL=postgres://postgres.your_project_id:your_password@your_host:6543/postgres?sslmode=require&pgbouncer=true
POSTGRES_URL_NON_POOLING=postgres://postgres.your_project_id:your_password@your_host:5432/postgres?sslmode=require

# Google Sheets Integration (OPTIONAL)
GOOGLE_SHEETS_SPREADSHEET_ID=your_google_sheets_id_here
GOOGLE_SHEETS_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}
GOOGLE_SHEET_NAME=OPERATIONS

# Application Settings
BASE_URL=/
NEXT_PUBLIC_API_URL=https://your-vercel-domain.vercel.app

# Build Configuration
NODE_ENV=production