{
  "version": 2,
  "framework": null,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/api/$1" 
    },
    {
      "handle": "filesystem"
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,PUT,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type,Authorization,AccessKey,x-api-key" }
      ]
    }
  ]
}
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
