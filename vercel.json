{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "pages/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/proxy/base/videolibrary",
      "dest": "/pages/api/proxy/base/videolibrary.js"
    },
    {
      "src": "/api/auth-check",
      "dest": "/pages/api/auth-check.js"
    },
    {
      "src": "/api/proxy/base/([^/]*)",
      "dest": "/pages/api/proxy/base/[...path].js?path=$1"
    },
    {
      "src": "/api/proxy/base/([^/]+)/([^/]+)",
      "dest": "/pages/api/proxy/base/[...path].js?path=$1/$2"
    },
    {
      "src": "/api/proxy/video/([^/]+)/([^/]+)/([^/]+)",
      "dest": "/pages/api/proxy/video/[...path].js?path=$1/$2/$3"
    },
    {
      "src": "/api/proxy/video/library/([^/]+)/collections",
      "dest": "/pages/api/proxy/video/library/[libraryId]/collections.js?libraryId=$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/pages/api/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization, AccessKey, access-key, x-api-key" }
      ]
    }
  ]
}
